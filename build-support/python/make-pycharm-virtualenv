# Wrapper for genearing PyCharm-compatible virtualenv.
set -e

HERE=$(cd `dirname "${BASH_SOURCE[0]}"` && pwd)
BUILDROOT=$HERE/../..
VENV_DIR=build-support/python/pycharm.venv
PROJECT_NAME=${PWD##*/}

pushd "$BUILDROOT"
  # Build a requirements.txt from repo-pinned requirements files.
  rm -f requirements.txt
  for req in 3rdparty/python/requirements*.txt; do
    if [ -f "$req" ]; then
      cat "$req" >> requirements.txt
      echo "" >> requirements.txt
    fi
  done
  sort -u requirements.txt -o requirements.txt

  chmod -R u+w "$VENV_DIR" 2>/dev/null || true
  rm -rf "$VENV_DIR"
  ./build-support/virtualenv "$VENV_DIR"
  source $VENV_DIR/bin/activate
    python3 -m pip install -U pip
    # Install pinned requirements without dependency resolution to avoid conflicts,
    # then install known transitive deps explicitly.
    python3 -m pip install --no-deps -r requirements.txt -f 3rdparty/python/wheels
    python3 -m pip install --no-deps -f 3rdparty/python/wheels \
      pykerberos==1.2.1 \
      redis==3.5.3 \
      mesos.interface==0.21.1 \
      compactor==0.2.2 \
      futures==2.1.6 \
      trollius==2.1.post2 \
      tornado==4.1
    # Match pytest plugins observed in Pants test runs
    python3 -m pip install \
      pytest==7.0.1 \
      pytest-cov==3.0.0 \
      pytest-xdist==2.5.0 \
      pytest-forked==1.6.0
  deactivate
popd

if [ ! -d .idea ]; then
  echo "Creating PyCharm project at .idea/$PROJECT_NAME.iml"
  mkdir .idea
  cat <<"EOF" > .idea/$PROJECT_NAME.iml
<?xml version="1.0" encoding="UTF-8"?>
<module type="PYTHON_MODULE" version="4">
  <component name="NewModuleRootManager">
    <content url="file://$MODULE_DIR$">
      <sourceFolder url="file://$MODULE_DIR$/src/main/python" isTestSource="false" />
      <excludeFolder url="file://$MODULE_DIR$/.pants.d" />
      <excludeFolder url="file://$MODULE_DIR$/dist" />
      <excludeFolder url="file://$MODULE_DIR$/out" />
    </content>
    <orderEntry type="sourceFolder" forTests="false" />
  </component>
  <component name="TestRunnerService">
    <option name="projectConfiguration" value="py.test" />
    <option name="PROJECT_TEST_RUNNER" value="py.test" />
  </component>
</module>
EOF
fi

echo "Your PyCharm environment is now set up.  You can open the project root
directory with PyCharm.

Once the project is loaded:
  - open project settings
  - click 'Project Interpreter'
  - click the cog in the upper-right corner
  - click 'Add Local'
  - select '$VENV_DIR/bin/python'
  - click 'OK'

Once this is done, all imports should be recognized, and you can run unit tests in the IDE!"
