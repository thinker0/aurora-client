python_sources(
  name = 'kerberos_auth',
  sources = ['**/*.py'],
  interpreter_constraints = ['CPython==2.7.*', 'CPython>=3.5'],
  dependencies = [
    '//:3rdparty#requests-kerberos',
    'src/main/python/apache/aurora/common',
  ],
)

python_sources(
  name = '_kerberos',
  sources = ['**/*.py'],
  interpreter_constraints = ['CPython==2.7.*', 'CPython>=3.5'],
  dependencies = [
    ':kerberos_auth',
    'src/main/python/apache/aurora/admin',
    'src/main/python/apache/aurora/client',
  ],
)

pex_binary(
  name = 'kaurora',
  entry_point = 'apache.aurora.client.cli.client:proxy_main',
  dependencies = [
    ':_kerberos',
  ],
)

pex_binary(
  name = 'kaurora_admin',
  entry_point = 'apache.aurora.admin.aurora_admin:proxy_main',
  dependencies = [
    ':_kerberos',
  ],
)

python_distribution(
  name = 'kerberos',
  dependencies = [
    ':_kerberos',
    ':kaurora_admin',
  ],
  provides = python_artifact(
    name = 'apache.aurora.kerberos',
    version = open('.auroraversion').read().strip().upper(),
  )
